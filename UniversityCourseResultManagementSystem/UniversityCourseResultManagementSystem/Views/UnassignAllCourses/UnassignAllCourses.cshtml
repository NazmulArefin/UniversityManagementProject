                <div class="col-sm-8 text-left">
                    <center>
                        <form id="myForm" action="" method="POST">
                            <div>
                                <input type="submit" name="UnassignAllCourses" id="UnassignAllCourses" value="Unassign Courses" style="height: 150px; width: 150px">
                            </div>
                        </form>

                        <label id="resultLog" class="label-default">@log</label> <br />
                        <label id="resultLog" class="label-default">@studentLog</label>
                    </center>


                    <script src="~/Scripts/jquery-3.1.1.js"></script>
                    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

                    <script>


                        $('#UnassignAllCourses').bind('click', function (ev) {
                            var $btn = $(this);
                            ev.preventDefault();
                            $("<div />").html("Are you sure?").dialog({
                                modal: true,
                                title: "Confirmation",
                                buttons: [{
                                    text: "YES",
                                    click: function () {
                                        $btn.trigger("click.confirmed");
                                        $(this).dialog("close");
                                    }
                                }, {
                                    text: "NO",
                                    click: function () {
                                        $(this).dialog("close");
                                    }
                                }]
                            }).show();
                        });



                    </script>
